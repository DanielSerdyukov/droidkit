<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="droidkit">

    <application android:allowBackup="true">

        <provider
            android:name=".sqlite.SQLiteProvider"
            android:authorities="droidkit.sqlite"
            android:exported="false" />

        <meta-data
            android:name="${applicationId}.DATABASE_NAME"
            android:value=":memory:" />

        <meta-data
            android:name="droidkit.sqlite.CASE_SENSITIVE_LIKE"
            android:value="true" />

    </application>

</manifest>
